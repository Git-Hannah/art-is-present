<section class="artist-profile-wrapper">

  <h2>Create your profile</h2>

  <form class="add-profile-form" action="/artist/add" method="POST" enctype="multipart/form-data">

    <div class="add-artist-name">
      <label for="name">Artist name:</label>
      <input id="name" type="text" name="name">
    </div>
    <br>
    <div>
      <label for="city">City:</label>
      <input id="city" type="text" name="city">
      <label for="country">Country</label>
      <input id="country" type="text" name="country">
    </div>
    <br>
    <label for="about">About you:</label>
    <textarea name="about" id="about" cols="30" rows="8" placeholder="Tell us a bit about you and your work">{{#if about}}{{about}}{{/if}}
    </textarea>
    <div>
      <label class="add-avatar-label" for="avatar">Add profile picture:</label>
      <input type="file" name="avatar" id="avatar" />
    </div>

    {{#if errorMessage}}
    <div class="error-message">{{errorMessage}}</div>
    {{/if}}

    <button class="create-profile-btn" type="submit">Create profile</button>

  </form>

</section>