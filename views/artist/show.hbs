{{#with artist}}
<section class="artist-profile">
  <img class="avatar-img" src={{avatar}} alt="avatar">
  <div class="about-me">
    <h1>{{name}}</h1>

    <p class="location"> <img class="pin-img" src="/images/location-pin.png" alt="location-pin">{{city}}, {{country}}
    </p>
    <p class="about-txt">{{about}}</p>
    <a class="edit-profile-btn" href="/artist/edit">Edit profile</a>

  </div>
</section>
{{/with}}

<hr class="section-break">

<section class="artist-profile-products">
  <h3>Your products:</h3>
  <a href="/add/product">Add product</a>
  {{#each productList}}
  {{!-- {{#each images}} --}}
  <a href="/show/{{_id}}/product"><img src={{images.[0]}} alt="product-image"></a>
  {{!-- {{/each}} --}}
  <a href="/show/{{_id}}/product">
    <h4>{{name}}</h4>
  </a>

  <a href="/edit/{{_id}}/product">Edit</a>
  <a href="/delete/{{_id}}/product">Delete</a>
  <br>
  {{/each}}

</section>