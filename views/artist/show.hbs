{{#with artist}}
<section class="artist-profile">
  <img class="avatar-img" src={{avatar}} alt="avatar">
  <div class="about-me">
    <h1>{{name}}</h1>

    <p class="location">
      <img class="pin-img" src="/images/location-pin.png" alt="location-pin">{{city}}, {{country}}
    </p>
    <p class="about-txt">{{about}}</p>
    <a class="edit-profile-btn" href="/artist/edit">Edit profile</a>
  </div>
  {{!-- {{#if isArtist}} --}}
  {{!-- <a href="/auth/logout">Log out</a>  I commented this 'cause now is in the header --}}
  {{!-- {{else}} --}}
  {{!-- <a href="mailto:{{email}}">Contact Artist</a> --}}
  {{!-- {{/if}} --}}
</section>
{{/with}}

<hr class="section-break">

<section class="artist-profile-products">
  <div class="product-view-top">
    {{#if isArtist}}
    <h3>Your listings:</h3>
    {{else}}
    <h3>{{name}}'s products:</h3>
    {{/if}}
    <a class="add-btn" href="/add/product">Add product</a>
  </div>

  <div class="grid-container">
    {{#each productList}}

    <div class="product-item">


      <a href="/show/{{_id}}/product">
        <figure class="product-img-wrap">

          {{!-- <div class="image-container"> --}}
          <img class="product-img" src={{images.[0]}} alt="product-image">
          {{!-- </div> --}}
        </figure>
        {{!-- <img class="product-img" src={{images.[0]}} alt="product-image"> --}}
      </a>
      <div class="card-bottom-content">
        <a href="/show/{{_id}}/product">
          <h3 class="product-name">{{name}}</h3>
        </a>
        <div>
          <div class="links">
            <a class="edit-product-btn" href="/edit/{{_id}}/product">Edit</a>
            <a class="delete-product-btn" href="/delete/{{_id}}/product">Delete</a>
          </div>
        </div>
      </div>

    </div>
    {{!-- <br> --}}
    {{/each}}

  </div>
</section>