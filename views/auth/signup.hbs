<section class="signup-wrapper"></section>

<h2>Signup here:</h2>

<form class="login-form" action="/auth/signup" method="POST" id="form-container">
  <div class="login-email"> <label for="email">Email</label>
    <input id="email" type="text" name="email">
  </div>

  <div class="login-password">
    <label for="password">Password</label>
    <input id="password" type="password" name="password">
  </div>

  {{#if errorMessage}}
  <div class="error-message">{{errorMessage}}</div>
  {{/if}}

  <div>
    <button type="sumbit">Create account</button>
  </div>

  <p class="account-message">
    Do you already have a profile?
    <a href="login">Login</a>
  </p>
</form>

</section>